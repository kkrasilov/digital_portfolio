<h2 class="border-bottom text-dark pb-2"><%= t('heading.registration') %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: 'shared/form_errors', locals: { model: @user } %>
  <div class="col-md-5">
    <div class="form-group">
      <%= f.label :login, class: '' %>
      <%= f.text_field :login, autofocus: true, class: 'form-control' %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :surname %>
      <%= f.text_field :surname, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :position %>
      <%= f.text_field :position, class: "form-control" %>
    </div>

    <div class="form-group mt-2">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <small class="form-text text-muted"><%= t('devise.characters_minimum') %> <%= @minimum_password_length %></small>
    </div>

    <div class="form-group mt-2">
      <%= f.label :password_confirmation %><br/>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions mt-4">
      <%= f.submit t('links.register'), class: 'btn btn-primary' %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
