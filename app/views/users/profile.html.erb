<section>
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-8">
        <div class="card profile-card">
          <div class="card-body p-4">
            <div class="d-flex text-black">
              <div class="flex-shrink-0">
                <% if current_user.avatar.attached? %>
                  <%= image_tag(current_user.avatar, class: 'img-fluid avatar-img', alt: 'Аватарка') %>
                <% else %>
                  <%= vite_image_tag 'images/default_avatar.jpg', alt: "Аватарка", class: "img-fluid avatar-img"%>
                <% end %>
              </div>
              <div class="flex-grow-1 ms-3">
                <h5 class="mb-1"><%= current_user.short_name %></h5>
                <p class="mb-2 pb-1 dark-text">
                  <%= current_user.position %>
                </p>
                <div class="d-flex justify-content-start rounded-3 p-2 mb-2 background-gray">
                  <div>
                    <p class="small text-muted mb-1">Проектов</p>
                    <p class="mb-0"><%= current_user.projects.count %></p>
                  </div>
                  <div class="px-3">
                    <p class="small text-muted mb-1">Наград</p>
                    <p class="mb-0"><%= current_user.portfolio.awards.count %></p>
                  </div>
                </div>
                <div class="mt-3 text-left">
                  <p class="mt-2"><span class="bold-text dark-text">Email: </span><%= current_user.email %></p>
                  <p class="mt-2"><span class="bold-text dark-text">Обо мне: </span><%= current_user.about_me %></p>
                </div>
                <div class="d-flex pt-1 mt-4">
                  <p class="buffer-top">
                    <%= link_to 'Редактировать профиль',
                                edit_user_path(current_user), class: 'btn btn-outline-secondary' %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>
