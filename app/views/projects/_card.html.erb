<div class="card" style="width: 18rem;">
  <% if project.image.attached? %>
    <%= image_tag(project.image, class: 'card-img-top', alt: 'Аватарка') %>
  <% else %>
    <%= vite_image_tag 'images/def.png', alt: "Аватарка", class: "card-img-top" %>
  <% end %>
  <div class="card-body card-flex">
    <h5 class="card-title"><%= project.title %></h5>
    <p class="card-text" style="max-height: 200px; font-size: 14px"><%= project.short_description %></p>
    <%= link_to 'Посмотреть', project_path(project), class: 'btn btn-secondary mt-2' %></p>
  </div>
</div>
